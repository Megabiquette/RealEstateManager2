<resources>

    <!-- Base application theme. -->
    <style name="REMTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/REMText</item>
        <item name="android:buttonStyle">@style/REMButtons</item>
    </style>

    <style name="REMText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_normal_dark</item>
    </style>

    <style name="REMButtons" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/background_light</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@android:color/background_light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

</resources>
